<%- include("header"); -%> <%- include("sidebar"); -%>

<div class="main__content">
  <div class="main__content-container">

    <% article_list.forEach(function(article) { %>
      <% if (article.category === id) { %>
        <div class="main__article"> 
          <p class="main__article-title"> <a href=<%= article.url %>><%= article.title %> </p></a>
          <p class="main__article-tags"> <%= article.category %> </p>
          <p class="main__article-author"> written by: <%= article.author %> </p>
        </div>
      <% } %>
    <% }); %>
    </div>
</div>

<%- include("footer"); -%>
