<%- include("header"); -%> <%- include("sidebar"); -%>

<div class="main__content">
  <div class="main__content-container">
    <p>Write Articles Here</p>
    <form action="" method="POST">
      <p class="main__write-p">Select Tags</p>
      <div class="main__write-tags">
        <button class="main__write-tags-button">Key</button>
        <button class="main__write-tags-button">Lock</button>
        <button class="main__write-tags-button">Security</button>
      </div>
      <div class="form-group">
        <label for="title">Write Your Title</label>
        <input
          id="title"
          type="text"
          class="form-control"
          name="title"
          required
        />
      </div>
      <div class="form-group">
        <label for="content">Write Your Content</label>
        <textarea
          id="content"
          type="text"
          class="form-control"
          name="content"
          required
          cols="30"
          rows="10"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="author"></label>
        <input
          id="author"
          type="text"
          class="form-control"
          name="author"
          value="<%= author.username %>"
          hidden
        />
      </div>
      <div class="form-group">
        <label for="category"></label>
        <select name="category" id="category">
          <option value="keys">keys</option>
          <option value="locks">locks</option>
          <option value="security">security</option>
        </select>
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>
</div>

<%- include("footer"); -%>
