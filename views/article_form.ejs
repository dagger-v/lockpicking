<%- include("header"); -%> <%- include("sidebar"); -%>

<div class="main__content">
  <p class="main__write-p">Select Tags</p>
  <div class="main__write-tags">
    <p class="main__write-tags-p">Key</p>
    <p class="main__write-tags-p">Lock</p>
    <p class="main__write-tags-p">Security</p>
  </div>
  <p>Write Articles Here</p>
  <form action="" method="POST">
    <div class="form-group">
      <label for="title">Write Your Title</label>
      <input
        id="title"
        type="text"
        class="form-control"
        name="title"
        required
      />
    </div>
    <div class="form-group">
      <label for="content">Write Your Content</label>
      <textarea
        id="content"
        type="text"
        class="form-control"
        name="content"
        required
        cols="30"
        rows="10"
      ></textarea>
    </div>
    <button type="submit">Submit</button>
  </form>
</div>

<%- include("footer"); -%>
