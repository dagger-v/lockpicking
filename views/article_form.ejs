<%- include("header"); -%>

<div class="main__content">
  <div class="main__content-container">
    <%if (isAuthenticated) { %>
    <form action="" method="POST">
      <div class="form-group">
        <label for="title">Write Your Title</label>
        <input
          id="title"
          type="text"
          class="form-control"
          name="title"
          maxlength="80"
          required
        />
      </div>
      <div class="form-group">
        <label for="content">Write Your Content</label>
        <textarea
          id="content"
          type="text"
          class="form-control"
          name="content"
          required
          cols="30"
          rows="10"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="author"></label>
        <input
          id="author"
          type="text"
          class="form-control"
          name="author"
          value="<%= author.username %>"
          hidden
        />
      </div>
      <div class="form-group">
        <label for="category"></label>
        <select name="category" id="category">
          <optgroup label="Beginners">
            <option value="keys">Keys</option>
            <option value="locks">Locks</option>
            <option value="safes">Safes</option>
          </optgroup>
          <optgroup label="Advanced">
            <option value="key bumping">Key Bumping</option>
            <option value="impressioning">Impressioning</option>
            <option value="decoding">Decoding</option>
          </optgroup>
          <optgroup label="Cyber Security">
            <option value="hacking">Hacking</option>
            <option value="network security">Network Security</option>
            <option value="protecting">Protecting</option>
          </optgroup>
        </select>
      </div>
      <button type="submit">Submit</button>
    </form>
    <% }else{ %>
    <h1>Oops! You aren't authorized to do that!</h1>
    <%}%>
  </div>
</div>

<%- include("footer"); -%>
