<%- include("header"); -%> <%- include("sidebar"); -%>

<div class="main__content">
  <div class="main__content-container">
    <h1>All Articles</h1>
    
    <%= article_list.title %>
    
    <% article_list.forEach(function(article) { %>
      <div class="main__article"> 
        <p class="main__article-title"> <a href=<%= article.url %>><%= article.title %> </p></a>
        <p class="main__article-author"> by: <%= article.author %> - <%= article.createdAt.toLocaleDateString()  %> </p>
        <p> <%= article.content.substring(0, 500) %> ... </p>
        <p class="main__article-category"> <%= article.category  %> </p>
        <p> <a href="<%=article.url %>">Full Article</a> </p>
      </div>
      <% }); %>
    </div>
</div>

<%- include("footer"); -%>
